<h1>User Activities</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Happened At</th>
      <th>Public Details</th>
      <th>Private Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_activities.each do |user_activity| %>
      <tr>
        <td><%= user_activity.user %></td>
        <td><%= user_activity.happened_at %></td>
        <td><%= user_activity.public_details %></td>
        <td><%= user_activity.private_details %></td>
        <td><%= link_to 'Show', user_activity %></td>
        <td><%= link_to 'Edit', edit_user_activity_path(user_activity) %></td>
        <td><%= button_to 'Destroy', user_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Activity', new_user_activity_path %>
