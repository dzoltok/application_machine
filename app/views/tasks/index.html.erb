<h1>Listing Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Assigned To</th>
      <th>Due</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th scope="row"><%= task.description %></th>
        <td><%= link_to task.assigned_to, tasks_path(assignee: task.assigned_to) %></td>
        <td><%= task.due_at %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary' %></td>
        <td><%= button_to 'Destroy', task, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
